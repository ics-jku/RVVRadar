# possible values for RVVBMARK_RVV_SUPPORT
RVVBMARK_RVV_SUPPORT_NO=0
RVVBMARK_RVV_SUPPORT_VER_07_08=1
RVVBMARK_RVV_SUPPORT_VER_09_10_100=2

# initial values
RVVBMARK_INSTALL_PREFIX="/usr/local"
RVVBMARK_RV_SUPPORT=0
RVVBMARK_RVV_SUPPORT=$RVVBMARK_RVV_SUPPORT_NO
RVVBMARK_EXTRA_ASFLAGS=""
RVVBMARK_EXTRA_CFLAGS=""


# set defaults if not set
[[ -z $CC ]] && CC=gcc


usage()
{
  cat <<_ACEOF
\`configure' configures rvvbmark to adapt to many kinds of systems.

Usage: $0 [OPTION]...

Defaults for the options are specified in brackets.

Configuration:
  -h, --help              display this help and exit

Installation directories:
  --prefix=PREFIX         install files in PREFIX
                          [$RVVBMARK_INSTALL_PREFIX]

_ACEOF
}

# try to get flags given by name from CFLAGS xor CC
# $1 .. flagname
getflag()
{
	value=$(echo $CFLAGS | grep "$1" | sed -e 's/.*$1=\([[:alnum:]]*\).*/\1/g')
	[[ -z $value ]] && \
		value=$($CC -### -E - 2>&1 | grep "$1" | head -n 1 | sed -e "s/.*-$1=\([[:alnum:]]*\).*/\1/g")
	echo $value
}



args=$(getopt -o h --long help,prefix: -- "$@")
if [[ $? -ne 0 ]] ; then
	usage
	exit 1
fi
eval set -- "$args"
while [[ $# -gt 0 ]]
do
	case "$1" in
	--prefix)
		RVVBMARK_INSTALL_PREFIX="$2"
		shift
		;;
	-h|--help)
		usage
		exit 0
		;;
	--)
		shift
		break
		;;
	*)
		perr "Invalid option: $1"
		usage
		exit 1
		;;
	esac
	shift
done


echo -en "Check install prefix \"$RVVBMARK_INSTALL_PREFIX\" .. "
if ! [[ -d $RVVBMARK_INSTALL_PREFIX ]] ; then
	echo "does not exist"
	exit 1
else
	echo "ok"
fi

echo -en "Check toolchain RISC-V support .. "
if ! $CC				\
	-DRVVBMARK_RV_SUPPORT=1		\
	-DRVVBMARK_RVV_SUPPORT=0	\
	-c bmark_memcpy_rv.c		\
	-o /dev/null > /dev/null 2>&1 ;
then
	echo "no"

else
	echo "yes"
	RVVBMARK_RV_SUPPORT=1

	echo -en "Check toolchain RISC-V vector support .. "
	march=$(getflag march)
	if [[ -z $march ]] ; then
		echo "no (unable to determine march)"

	else
		# add v if not included in march_tmp
		march_tmp=$march
		[[ $march != rv*v* ]] && march_tmp+=v

		RVVBMARK_RVV_SUPPORT=$RVVBMARK_RVV_SUPPORT_NO
		for rvv_support in $RVVBMARK_RVV_SUPPORT_VER_07_08 $RVVBMARK_RVV_SUPPORT_VER_09_10_100 ; do
			if $CC								\
				-march=$march_tmp					\
				-DRVVBMARK_RV_SUPPORT=1					\
				-DRVVBMARK_RVV_SUPPORT=$rvv_support			\
				-c bmark_memcpy_rvv.c					\
				-o /dev/null > /dev/null 2>&1 ;
			then
				RVVBMARK_RVV_SUPPORT=$rvv_support
			fi
		done

		if [[ $RVVBMARK_RVV_SUPPORT != $RVVBMARK_RVV_SUPPORT_NO ]] ; then
			if [[ $RVVBMARK_RVV_SUPPORT == $RVVBMARK_RVV_SUPPORT_VER_07_08 ]] ; then
				echo "yes (rvv v0.7/v0.8)"
			else
				echo "yes (rvv v0.9/v0.10/v1.0) -- UNTESTED!"
			fi
			
			# override march in flags, if v was added above
			echo -en "Check if 'v' needs to be added to march .. "
			if [[ $march != $march_tmp ]] ; then
				echo "yes (-march=($march_tmp))"
				RVVBMARK_EXTRA_CFLAGS+="-march=$march_tmp"
			else
				echo "no"
			fi
		else
			echo "no (unable to build)"
		fi

	fi
fi



sed config.mk.in							\
	-e s#\@RVVBMARK_RV_SUPPORT\@#$RVVBMARK_RV_SUPPORT#g		\
	-e s#\@RVVBMARK_RVV_SUPPORT\@#$RVVBMARK_RVV_SUPPORT#g		\
	-e s#\@RVVBMARK_INSTALL_PREFIX\@#$RVVBMARK_INSTALL_PREFIX#g	\
	-e s#\@RVVBMARK_EXTRA_CFLAGS\@#$RVVBMARK_EXTRA_CFLAGS#g		\
	> config.mk

echo "done."
echo
echo "Next steps:"
echo "make"
echo "make install"
echo

exit 0
